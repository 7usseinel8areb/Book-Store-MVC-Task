@model Book
<form asp-action="SaveEdit" enctype="multipart/form-data">
    <div class="col-md-6 ">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Title" class="form-label mt-4"></label>
            <input type="text" asp-for="Title" class="form-control" placeholder="Book Name" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="form-label mt-4"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Write here.."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageFile" class="form-label mt-4"></label>
            <input type="file" asp-for="ImageFile" class="form-control" placeholder="Choose file" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success mt-3">Save</button>
        <button type="reset" class="btn btn-danger mt-3">Reset</button>
    </div>
</form>