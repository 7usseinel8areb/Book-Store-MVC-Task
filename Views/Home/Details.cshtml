@model Book

<div class="card border-light rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="fw-bold">@Model.Title</h1>
                    <p class="fs-5">@Model.Description</p>
                </div>
            </div>
            <div class="col-md-4">
                <img src="/Images/@Model.Image" alt="@Model.Title" class="w-100" />
            </div>
        </div>
    </div>
</div>